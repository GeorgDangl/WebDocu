@model Dangl.WebDocumentation.ViewModels.Admin.DeleteProjectAssetViewModel

<p>
    <a asp-action="Index">Back to overview</a>
</p>
<h3>Delete project asset file</h3>

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Admin" asp-action="DeleteProjectAsset" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label asp-for="ProjectId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ProjectId" class="form-control" type="hidden" />
                        <span class="form-control">@Model.ProjectId</span>
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ProjectName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ProjectName" class="form-control" type="hidden" />
                        <span class="form-control">@Model.ProjectName</span>
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Version" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Version" class="form-control" type="hidden" />
                        <span class="form-control">@Model.Version</span>
                        <span asp-validation-for="Version" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FileName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="FileName" class="form-control" type="hidden" />
                        <span class="form-control">@Model.FileName</span>
                        <span asp-validation-for="FileName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="FileId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="FileId" class="form-control" type="hidden" />
                        <span class="form-control">@Model.FileId</span>
                        <span asp-validation-for="FileId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ConfirmDelete" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <div class="checkbox">
                            <label asp-for="ConfirmDelete">
                                <input asp-for="ConfirmDelete" />
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-raised btn-primary">Delete Project Asset File</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
<p class="text-warning">Deletion of the project asset file is not reversible and will delete the physical file from the server.</p>
