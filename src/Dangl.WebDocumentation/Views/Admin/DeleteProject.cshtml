@model Dangl.WebDocumentation.ViewModels.Admin.DeleteProjectViewModel

<p>
    <a asp-action="Index">Back to overview</a>
</p>
<h3>Delete project</h3>

<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Admin" asp-action="DeleteProject" method="post" class="form-horizontal" role="form">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ProjectId" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ProjectId" class="form-control" type="hidden"/>
                        <span>@Model.ProjectId</span>
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ProjectName" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ProjectName" class="form-control" type="hidden"/>
                        <span>@Model.ProjectName</span>
                        <span asp-validation-for="ProjectName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmDelete" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="ConfirmDelete"/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-default">Delete Project</button>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>
<p class="text-warning">Deletion of the project is not reversible and will delete all physical files from that project on the server.</p>